<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.client.products.detail.ClientProductsDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            app:iss_auto_cycle="true"
            app:iss_period="5000"
            app:iss_delay="0"/>

        <TextView
            android:id="@+id/tvPname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del producto"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tvPdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DESCRIPCIÃ“N"
            android:fontFamily="@font/poppinsbold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="35dp"/>

        <TextView
            android:id="@+id/tvdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet consectetur adipiscing elit tellus sodales, vulputate hendrerit cum sociosqu morbi eu nunc in elementum pharetra, eget aptent mollis ligula donec potenti inceptos proin. Vitae massa nam primis eu iaculis consequat habitasse torquent commodo, ultricies tellus metus etiam ligula mollis felis aliquam cubilia, dignissim bibendum luctus montes suscipit curae ante odio."
            android:fontFamily="@font/poppinslight"
            android:textSize="18sp"

            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:maxLength="255"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|left"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/ivAdd"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_add"/>

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:fontFamily="@font/poppinsbold"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <ImageView
                android:id="@+id/ivRemove"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_remove"/>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:text="$0"
                android:fontFamily="@font/poppinsbold"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Agregar producto"
        android:backgroundTint="@color/blue_dark"
        android:fontFamily="@font/poppinsmedium"
        android:layout_marginBottom="15dp"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>